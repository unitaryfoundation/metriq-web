{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["DOM", "ES2020"],
    "types": ["node"],
    "strict": false,
    "skipLibCheck": true,
    "allowJs": false,
    "sourceMap": false,
    "outDir": ".",
    "rootDir": "."
  },
  "include": [
    "main.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
